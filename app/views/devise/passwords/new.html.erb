<h4 class="text-center">Forgot your password?</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input-group my-3">
    <div class="input-group-prepend">
      <%= f.label :email, '<i class="fa fa-envelope"></i>'.html_safe, class: "input-group-text justify-content-center" %>
    </div>
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <div>
    <span class="text-secondary small">Fill in your email to get reset password instruction.</span>
  </div>

  <div class="form-row">
    <div class="col">

    <div class="float-right d-flex align-items-center">
    <%= render "devise/shared/links" %>
    <%= f.submit "Send", class: "btn btn-primary"%>
    </div>
  </div>
<% end %>

