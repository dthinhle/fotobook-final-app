<div class="col-6 col-lg-3 pb-2 px-2">
  <div class="card shadow-sm">
    <div class="thumbnail">
      <div class="h-100 d-flex flex-wrap justify-content-center">
        <% begin %>
          <% unless src == 'nil' %>
            <%= image_tag  src, class: 'img-fluid'%>
          <% end
        rescue => exception %>
        <%= image_tag  "dummy-photo.jpg", class: 'img-fluid'%>
        <% end %>
      </div>
    </div>
  </div>
</div>