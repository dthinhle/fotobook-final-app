
    <main class="col-12 col-md-9 col-xl-8 py-md-3">
      <div class="card pt-3">
        <div class="row my-md-2">
          <div class="col-12 col-sm-auto ml-md-4 d-flex justify-content-center">
            <%= image_tag  "dummy-profile.png", class: "myprofile-avatar" %>
          </div>
          <div class="col align-items-center d-flex">
            <div class="w-100 pt-3 p-sm-0 ">

              <div class="d-sm-block d-flex justify-content-center">

                <button class="badge badge-pill btn-outline-primary btn-badge-border">
                  Edit profile
                </button>
              </div>
              <div class="h1 mt-2 d-sm-block text-center text-md-left px-2">
                Senjougahara Hitagi
              </div>
              <div class="row no-gutters h4">
                <div class="col-md-auto col-12 justify-content-center">
                  <div class="text-center text-sm-left">
                    <a class="text-primary h5 pr-2"> <span class="h4">10</span> photos</a>
                    <a class="text-secondary h5 pr-2"><span class="h4">15</span> albums</a>
                  </div>
                </div>
                <div class="col-md-auto col-12 pl-lg-2">
                  <div class="text-center text-sm-left">
                    <a class="text-secondary h5 pr-2"> <span class="h4">20</span> followers</a>
                    <a class="text-secondary h5 pr-2"> <span class="h4">25</span> following</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <hr>
        <div class="feed container-fluid">
          <div class="row px-1 pb-2">
            <% 1.upto(8) do |x| %>
              <%= render partial: 'profiles/imgholder', locals: {src: "00#{x}"} %>
            <% end %>
          </div>
        </div>
      </div>
    </main>