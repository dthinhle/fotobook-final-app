<main class="col-12 col-md-9 col-xl-8 py-md-3">
  <div class="card pt-3">
    <p class="h5 mb-0 px-3">
      <%= t '.title' %>
    </p>
    <hr>
    <div class="d-flex justify-content-center px-3">
      <div class="manage-view w-100">
        <div class="row px-1 photo-collection">
          <% @albums.each do |album| %>
            <%= render partial: 'profiles/imgholder', locals: {mode: 'album', src: album, edit: true, admin: true} %>
          <% end %>
        </div>

        <div class="d-flex justify-content-center w-100 pagination-bar">
        <%= paginate @albums %>
        </div>

      </div>
    </div>
  </div>
</main>