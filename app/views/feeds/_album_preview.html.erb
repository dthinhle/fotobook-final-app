<div id="albumPreview" class="carousel slide w-100" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <% album.photos.each_with_index do |photo,idx| %>
      <% if idx == 0 %>
        <div class="carousel-item active">
      <% else %>
        <div class="carousel-item">
      <% end %>
          <div class="w-100 d-flex justify-content-center">
            <%= image_tag  photo.img.url, class: 'img-fluid' %>
          </div>
        </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#albumPreview" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only"><%= t '.c-prev' %></span>
  </a>
  <a class="carousel-control-next" href="#albumPreview" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only"><%= t '.c-next' %></span>
  </a>
</div>