<% if @mode == 'photos' %>
  $('.feed-photo').append('<%= j (render partial: "feeds/lazy_photo") %>');
  <% if @photo.next_page %>
    $('.pagination').replaceWith('<%= j paginate @photo %>');
  <% else %>
    $('.pagination').html("");
  <% end %>

<% elsif @mode == 'albums' %>

  $('.feed-photo').append('<%= j (render partial: "feeds/lazy_album") %>');
  <% if @album.next_page %>
    $('.pagination').replaceWith('<%= j paginate @album %>');
  <% else %>
    $('.pagination').html("");
  <% end %>

<% end %>