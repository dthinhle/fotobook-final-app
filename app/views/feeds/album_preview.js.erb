
$(".img-preview-body").html('<%= j (render partial: "feeds/album_preview", locals: {album: @album}) %>')
<% author = @album.user %>
<% author_txt = "#{author.name}" %>

$("#imgPreviewModal").find('.modal-title').text('<%= j @album.title%>')
$("#imgPreviewModal").find('.text-primary').text('<%= j author_txt%>')
$("#imgPreviewModal").find('.text-secondary').text('<%= j @album.desc.html_safe %>')

$("#imgPreviewModal").modal('show')